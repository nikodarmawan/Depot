<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
<div id="banner">
	<%= image_tag("logo.png")%>
	<%= @page_title || "Pragmatic Bookshelf" %>
</div>

<div id="columns">
	<div class="date_display">
		<%= chatty_time_and_date %>
	</div>
	<div id="side">
		<a href="#">Home</a><br />
		<a href="#">Questions</a><br />
		<a href="#">News</a><br />
		<a href="#">Contacts</a><br />
	
	</div>
</div>

<div id="main">
	<%= yield %>
</div>

</body>
</html>
